{
    "engines": {
        "node": ">=8.3.0"
    },
    "env": {
        "es2021": true,
        "jest/globals": true,
        "node": true
    },
    "extends": ["eslint:recommended", "plugin:node/recommended", "plugin:markdown/recommended", "prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["jest", "markdown"],
    "rules": {
        "no-console": 1,
        "no-unused-vars": 1,
        "node/no-extraneous-import": 1,
        "node/shebang": 0
    }
}
